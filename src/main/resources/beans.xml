<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="SRK"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="51"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Salman"/>
        <constructor-arg index="1" value="Male"/>
        <constructor-arg index="2" value="51"/>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg type="String" value="Amir"/>
        <constructor-arg type="String" value="Male"/>
        <constructor-arg type="int" value="51"/>
    </bean>


    <bean name="movie1,movie2" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor" />
    </bean>



</beans>